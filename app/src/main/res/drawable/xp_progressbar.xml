<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background"
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape>
            <corners android:radius="12dip"/>
            <gradient
                android:startColor="#6950FB"
                android:centerColor="#9045F7"
                android:centerY="1.0"
                android:endColor="#B739F3"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress"
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <clip>
            <shape>
                <corners android:radius="12dip"/>
                <gradient
                    android:startColor="#6950FB"
                    android:centerY="1.0"
                    android:endColor="#B739F3"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>