<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/toolbarll"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/red"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="PARENT CONSENT FORM"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="SIGN HERE"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_height="280dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/canvasLayout"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/canvasLayout"
            android:layout_alignEnd="@id/canvasLayout"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_clear_canvas"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmitSignature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_btn"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />
</LinearLayout>